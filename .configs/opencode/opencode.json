{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "vault": {
      "type": "local",
      "command": ["python", "{env:VAULT_MCP_SERVER_PATH}"],
      "enabled": true,
      "environment": {
        "VAULT_PATH": "{env:VAULT_PATH}"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": false
    }
  }
}
